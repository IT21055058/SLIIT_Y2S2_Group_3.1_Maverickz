<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="Home"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="User Name"
            android:textSize="20dp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/choose_user_logo"
            android:layout_width="128dp"
            android:layout_height="120dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/ic_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choose_user_logo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="106dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="5dp"
            android:text=" Profile"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/hospital_logo"
            android:layout_width="128dp"
            android:layout_height="120dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="80dp"
            android:clickable="true"
            app:srcCompat="@drawable/ic_hospital" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hospital_logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="258dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="Blood Bank"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/event_logo"
            android:layout_width="128dp"
            android:layout_height="120dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="270dp"
            app:srcCompat="@drawable/ic_event" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_logo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="275dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="5dp"
            android:text="Event"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bottom_logo"
            android:layout_width="156dp"
            android:layout_height="220dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="133dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />


        <RelativeLayout
            android:layout_width="322dp"
            android:layout_height="720dp"
            android:layout_marginEnd="210dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/choose_community"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="270dp"
                app:srcCompat="@drawable/ic_request_hospital" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="105dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="187dp"
                android:text="Request"
                android:textStyle="bold" />


        </RelativeLayout>


    </RelativeLayout>

    <!--        </Button>-->

</LinearLayout>